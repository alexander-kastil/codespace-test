{
    "name": "GitHub Copilot",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
    "features": {
        "ghcr.io/devcontainers/features/dotnet:2": {
            "version": "10.0",
            "runtimeOnly": false
        },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "22.12.0"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12"
        }
    },
    // Prebuild optimization: install lightweight Python deps during image creation
    // so Codespaces can cache them in prebuilds.
    "onCreateCommand": "python -m pip install --upgrade pip && python -m pip install fastapi==0.110.3 'uvicorn[standard]==0.29.0'",
    "postCreateCommand": "dotnet --info && node -v && python --version",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp",
                "ms-dotnettools.csdevkit",
                "ms-vscode-remote.remote-containers",
                "github.copilot-chat",
                "GitHub.vscode-pull-request-github",
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-python-envs",
                "ms-python.vscode-pylance",
                "humao.rest-client",
                "dbaeumer.vscode-eslint",
                "ms-azuretools.azure-dev",
                "ms-vscode.azurecli",
                "ms-azuretools.vscode-azurefunctions",
                "ms-azuretools.vscode-azure-mcp-server",
                "ms-vscode.vscode-node-azure-pack",
                "ms-azuretools.vscode-azureresourcegroups",
                "ms-azuretools.vscode-azurestorage",
                "ms-azuretools.vscode-bicep",
                "azurite.azurite",
                "ms-azuretools.vscode-cosmosdb"
            ]
        }
    }
}